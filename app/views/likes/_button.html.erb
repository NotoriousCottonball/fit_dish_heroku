<% if current_user.like?(recipe) %>
  <%= link_to 'UnLike Recipe <i class="fas fa-meh"></i>'.html_safe, unlike_path(recipe_id: recipe.id), class: "btn btn-md btn-info btn-muted rounded border border-muted ml-3", remote: true, method: :delete %>
<% else %>
  <%= link_to 'Like Recipe <i class="fas fa-grin-hearts"></i>'.html_safe, like_path(recipe_id: recipe.id), class: "btn btn-md btn-info btn-muted rounded border border-muted ml-3", remote: true, method: :post %>
<% end %>
