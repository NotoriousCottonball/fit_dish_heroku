<div class="d-inline-block">

  <h1 class=" display-2 text-success font-weight-bold info">Ingredients</h1>

  <%= link_to 'Add New Ingredient', new_ingredient_path, class: "btn btn-success btn-md border border-muted ml-3 mb-3 align-middle" %>



          <ul class="list-group mb-3">
            <% @ingredients.each do |ingredient| %>
                <li class="list-group-item">
                <span class="align-middle"><%= ingredient.name %></span>
                <%= link_to 'Delete', ingredient, class:"btn btn-sm btn-dark border border-muted float-right m-0", method: :delete, data: { confirm: 'Are you sure?' } %>
                </li>
            <% end %>
          </ul>
  </div>
